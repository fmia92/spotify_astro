---
import Time from "@/icons/Time.astro";
import type { Song } from "@lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y-2 divide-gray-500/20">
    <thead class="">
        <tr class="text-gray-400">
            <th class="px-4 py-2 tex-sm font-light">#</th>
            <th class="px-4 py-2 tex-sm font-light">TÃ­tulo</th>
            <th class="px-4 py-2 tex-sm font-light">Artista</th>
            <th class="px-4 py-2 tex-sm font-light">Album</th>
            <th class="px-4 py-2 tex-sm font-light">
                <Time class="w-4 h-4" />
            </th>
        </tr>
    </thead>
    <tbody>
        {
            songs.map((song: Song, index: number) => (
                <tr class="border-collapse border-spacing-0 text-gray-300 text-sm font-light hover:bg-white/10 overflow-hidden transition duration-300">
                    <td class="px-4 py-2 rounded-tl-lg rounded-bl-lg w-5">{index + 1}</td>
                    <td class="px-4 py-2 gap-3 flex">
                        <picture>
                            <img src={song.image} alt={song.title} class="w-11 h-11 rounded-full" />
                        </picture>
                        <div class="flex flex-col">
                            <h3 class="text-white text-base font-normal">{song.title}</h3>
                            <span>
                                {
                                    song.artists.join(", ")
                                }
                            </span>
                        </div>
                    </td>
                    <td class="px-4 py-2">{song.artists}</td>
                    <td class="px-4 py-2">{song.album}</td>
                    <td class="px-4 py-2 rounded-tr-lg rounded-br-lg">{song.duration}</td>
                </tr>
            ))
        }
    </tbody>
</table>